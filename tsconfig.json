{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es2020",
    "declaration": false,
    "module": "es2020",
    "strictNullChecks": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*", "test/index.spec.ts"],
  "exclude": ["node_modules"]
}
