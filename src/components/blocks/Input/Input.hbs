<label class="{{labelClass}}" for="{{id}}">{{label}}</label>
<input id="{{id}}"
       class="{{inputClass}}"
       type="{{type}}"
       placeholder="{{placeholder}}"
       name="{{name}}"
       value="{{value}}"
       autocomplete="{{autocomplete}}">
<span class="form-error{{#if error}} form-error_show{{/if}}" data-name="{{name}}">{{errorText}}</span>
